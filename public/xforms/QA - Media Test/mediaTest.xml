<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms"
        xmlns:odk="http://www.opendatakit.org/xforms">
    <h:head>
        <h:title>mediaTest</h:title>
        <model odk:xforms-version="1.0.0">
            <itext>
                <translation lang="English">
                    <text id="/data/text:label">
                        <value>Text</value>
                    </text>
                </translation>
                <translation lang="default" default="true()">
                    <text id="/data/text:label">
                        <value form="image">jr://images/a.jpeg</value>
                        <value form="big-image">jr://images/a.jpeg</value>
                        <value form="video">jr://video/a.mp4</value>
                        <value form="audio">jr://audio/a.mp3</value>
                        <value>-</value>
                    </text>
                </translation>
            </itext>
            <instance>
                <data id="mediaTest">
                    <text/>
                    <meta>
                        <instanceID/>
                    </meta>
                </data>
            </instance>
            <bind nodeset="/data/text" type="string"/>
            <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/>
        </model>
    </h:head>
    <h:body>
        <input ref="/data/text">
            <label ref="jr:itext('/data/text:label')"/>
        </input>
    </h:body>
</h:html>
