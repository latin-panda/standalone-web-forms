<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>thousands-separator</h:title>
    <model>
      <instance>
        <thousands-separator id="thousands-separator">
          <text1/>
          <text2/>
          <int1/>
          <int2/>
          <d1/>
          <d2/>
          <meta>
            <instanceID/>
          </meta>
        </thousands-separator>
      </instance>
      <bind nodeset="/thousands-separator/text1" type="string"/>
      <bind nodeset="/thousands-separator/text2" type="string"/>
      <bind nodeset="/thousands-separator/int1" type="int"/>
      <bind nodeset="/thousands-separator/int2" type="int"/>
      <bind nodeset="/thousands-separator/d1" type="decimal"/>
      <bind nodeset="/thousands-separator/d2" type="decimal"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/thousands-separator/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/thousands-separator/text1">
      <label>Text</label>
    </input>
    <input appearance="numbers thousands-sep" ref="/thousands-separator/text2">
      <label>Text with appearance</label>
    </input>
    <input ref="/thousands-separator/int1">
      <label>Integer</label>
    </input>
    <input appearance="thousands-sep" ref="/thousands-separator/int2">
      <label>Integer with appearance</label>
    </input>
    <input ref="/thousands-separator/d1">
      <label>Decimal</label>
    </input>
    <input appearance="thousands-sep" ref="/thousands-separator/d2">
      <label>Decimal with appearance</label>
    </input>
  </h:body>
</h:html>
